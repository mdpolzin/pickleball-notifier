# Logrotate configuration for Pickleball Scraper
# This file uses relative paths and should be run from the project directory
# Usage: logrotate -d pickleball-scraper.logrotate (from project directory)

scraper.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 644 root root
    postrotate
        # Optional: Send signal to any processes that might have the log file open
        # killall -USR1 python 2>/dev/null || true
    endscript
}
